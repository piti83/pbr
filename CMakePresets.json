{
  "version": 6,
  "configurePresets": [
    {
      "name": "windows-msvc",
      "displayName": "Windows MSVC (VS 2022)",
      "description": "Targeting Windows with Visual Studio 2022 generator",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows-release",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "set"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-ninja",
      "displayName": "Linux Release (Ninja)",
      "description": "Targeting Linux (Release) using Ninja and GCC",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-release-build",
      "configurePreset": "linux-ninja"
    },
    {
      "name": "windows-release-build",
      "configurePreset": "windows-msvc",
      "configuration": "Release"
    },
    {
      "name": "windows-debug-build",
      "configurePreset": "windows-msvc",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "linux-release-test",
      "configurePreset": "linux-ninja",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-release-test",
      "configurePreset": "windows-msvc",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-debug-test",
      "configurePreset": "windows-msvc",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
