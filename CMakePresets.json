{
  "version": 6,
  "configurePresets": [
    {
      "name": "windows-msvc",
      "displayName": "Windows (Ninja Multi-Config + MSVC)",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/windows",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-ninja-multi",
      "displayName": "Linux (Ninja Multi-Config)",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/linux",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug-build",
      "configurePreset": "linux-ninja-multi",
      "configuration": "Debug"
    },
    {
      "name": "linux-release-build",
      "configurePreset": "linux-ninja-multi",
      "configuration": "Release"
    },
    {
      "name": "windows-debug-build",
      "configurePreset": "windows-msvc",
      "configuration": "Debug"
    },
    {
      "name": "windows-release-build",
      "configurePreset": "windows-msvc",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "linux-debug-test",
      "configurePreset": "linux-ninja-multi",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "linux-release-test",
      "configurePreset": "linux-ninja-multi",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-debug-test",
      "configurePreset": "windows-msvc",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-release-test",
      "configurePreset": "windows-msvc",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
